    <script>
        function checkPassword() {
            if(document.getElementById('parentPassword').value === "no games") {
                document.getElementById('gamesTab').classList.remove('hidden');
                document.getElementById('games').classList.remove('hidden');
                alert("Games section unlocked");
            } else {
                alert("Incorrect password");
            }
        }
        
